{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Grep",
      "Glob",
      "LS",
      "Bash(node:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(vitest:*:*)"
    ],
    "deny": [
      "WebFetch",
      "WebSearch"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node ./node_modules/@your-scope/cat-herder/dist/tools/pipeline-validator.js < /dev/stdin"
          }
        ]
      }
    ]
  }
}