{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Grep",
      "Glob",
      "LS",
      "Bash(git *:*)",
      "Bash(npm *:*)",
      "Bash(vitest:*:*)",
      "Bash(node:*)"
    ],
    "deny": [
      "WebFetch",
      "WebSearch"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node ./node_modules/@your-scope/claude-project/dist/tools/pipeline-validator.js < /dev/stdin"
          }
        ]
      }
    ],
  }
}