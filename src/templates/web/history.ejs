<%- include('partials/header', { title: 'Run History' }) %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 mb-0">
        <i class="bi bi-clock-history me-2 text-primary"></i>
        Run History
    </h1>
    <div class="d-flex align-items-center text-muted">
        <i class="bi bi-broadcast-pin me-1"></i>
        <small>Status updates in real-time</small>
    </div>
</div>

<!-- Sequences -->
<div class="card mb-4">
    <div class="card-header bg-transparent">
        <h5 class="card-title mb-0">
            <i class="bi bi-collection me-2"></i>
            Recent Sequences
        </h5>
    </div>
    <div class="card-body p-0">
        <% if (sequences && sequences.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Sequence ID</th>
                            <th>Status</th>
                            <th>Folder Path</th>
                            <th>Duration</th>
                            <th>Last Update</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sequences.forEach(sequence => { %>
                            <tr data-sequence-id="<%= sequence.sequenceId %>">
                                <td>
                                    <a href="/sequence/<%= sequence.sequenceId %>"><strong><%= sequence.sequenceId %></strong></a>
                                </td>
                                <td>
                                    <span class="badge status-<%= sequence.phase %>"><%= sequence.phase %></span>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark"><%= sequence.folderPath %></span>
                                </td>
                                <td><%= sequence.stats?.totalDuration ? sequence.stats.totalDuration.toFixed(2) + 's' : 'N/A' %></td>
                                <td><%= new Date(sequence.lastUpdate).toLocaleString() %></td>
                                <td>
                                    <a href="/sequence/<%= sequence.sequenceId %>" class="btn btn-sm btn-outline-primary">Details</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-muted p-3">No sequences have been run yet.</p>
        <% } %>
    </div>
</div>

<!-- Standalone Tasks -->
<div class="card">
    <div class="card-header bg-transparent">
        <h5 class="card-title mb-0">
            <i class="bi bi-list-task me-2"></i>
            Recent Standalone Tasks
        </h5>
    </div>
    <div class="card-body p-0">
        <% if (standaloneTasks && standaloneTasks.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Task ID</th>
                            <th>Status</th>
                            <th>Duration</th>
                            <th>Last Update</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% standaloneTasks.forEach(task => { %>
                            <tr data-task-id="<%= task.taskId %>">
                                <td>
                                    <a href="/task/<%= task.taskId %>"><strong><%= task.taskId %></strong></a>
                                </td>
                                <td><span class="badge status-<%= task.phase %>"><%= task.phase %></span></td>
                                <td><%= task.stats?.totalDuration ? task.stats.totalDuration.toFixed(2) + 's' : 'N/A' %></td>
                                <td><%= new Date(task.lastUpdate).toLocaleString() %></td>
                                <td>
                                    <a href="/task/<%= task.taskId %>" class="btn btn-sm btn-outline-primary">Details</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-muted p-3">No standalone tasks have been run yet.</p>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>