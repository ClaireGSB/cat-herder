<%- include('partials/header', { title: task.taskId, page: 'task-detail' }) %>

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/history" class="text-decoration-none">
                <i class="bi bi-clock-history"></i>
                Run History
            </a>
        </li>
        
        <% if (task.parentSequenceId) { %>
            <li class="breadcrumb-item">
                <a href="/sequence/<%= task.parentSequenceId %>"><%= task.parentSequenceId %></a>
            </li>
        <% } %>

        <li class="breadcrumb-item active" aria-current="page">
            <%= task.taskId %>
        </li>
    </ol>
</nav>

<!-- Task Overview Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-transparent">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h4 mb-0">
                        <i class="bi bi-gear-fill me-2 text-primary"></i>
                        <%= task.taskId %>
                    </h1>
                    <span class="badge status-<%= task.phase %> fs-6 task-status">
                        <% if (task.phase === 'running') { %>
                            <i class="bi bi-arrow-repeat spinner-border spinner-border-sm me-1" role="status"></i>
                        <% } else if (task.phase === 'waiting_for_input') { %>
                            <i class="bi bi-question-circle-fill me-1"></i>
                        <% } else if (task.phase === 'done') { %>
                            <i class="bi bi-check-circle-fill me-1"></i>
                        <% } else if (task.phase === 'failed') { %>
                            <i class="bi bi-exclamation-triangle-fill me-1"></i>
                        <% } else if (task.phase === 'paused') { %>
                            <i class="bi bi-pause-circle-fill me-1"></i>
                        <% } %>
                        <%= task.phase %>
                    </span>
                </div>
            </div>
            <div class="card-body">
                <% if (task.steps && Object.keys(task.steps).length > 0) { %>
                    <% Object.entries(task.steps).forEach(([stepName, stepStatus], index) => { %>
                        <div class="pipeline-step <%= stepStatus === 'done' ? 'completed' : stepStatus %> p-3" data-step="<%= stepName %>">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">
                                        <span class="badge bg-light text-dark me-2"><%= index + 1 %></span>
                                        <%= stepName %>
                                        
                                        <%- include('partials/_status-badge', { status: stepStatus, cssClass: 'ms-2' }) %>
                                        
                                        <% if (task.phase === 'running' && stepStatus === 'running') { %>
                                            <a href="/live" class="ms-2 btn btn-danger btn-sm" title="View Live Activity">
                                                <i class="bi bi-broadcast me-1"></i>View Live Activity
                                            </a>
                                        <% } %>
                                    </h6>
                                    
                                     <% /* We can add step duration here if available in the future */ %>
                                </div>
                                
                                <div class="btn-group btn-group-sm ms-3" role="group">
                                    <% if (task.logs && task.logs[stepName]) { %>
                                        <% if (task.logs[stepName].log) { %>
                                            <button type="button" class="btn btn-outline-primary js-log-main" 
                                                    onclick="loadLog('<%= task.taskId %>', '<%= task.logs[stepName].log %>', this)"
                                                    title="View Main Log">
                                                <i class="bi bi-file-text"></i>
                                                Main Log
                                            </button>
                                        <% } %>
                                        <% if (task.logs[stepName].reasoning) { %>
                                            <button type="button" class="btn btn-outline-secondary js-log-reasoning" 
                                                    onclick="loadLog('<%= task.taskId %>', '<%= task.logs[stepName].reasoning %>', this)"
                                                    title="View Reasoning Log">
                                                <i class="bi bi-lightbulb"></i>
                                                Reasoning
                                            </button>
                                        <% } %>
                                        <% if (task.logs[stepName].raw) { %>
                                            <button type="button" class="btn btn-outline-info js-log-raw" 
                                                    onclick="loadLog('<%= task.taskId %>', '<%= task.logs[stepName].raw %>', this)"
                                                    title="View Raw JSON Log">
                                                <i class="bi bi-code-square"></i>
                                                Raw
                                            </button>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-list-ol display-4 mb-3"></i>
                        <p>No pipeline steps information available.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Human Interactions Section -->
<% if (task.interactionHistory && task.interactionHistory.length > 0) { %>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-chat-dots me-2"></i>
                        Human Interactions
                        <small class="text-muted ms-2">(<%= task.interactionHistory.length %> interaction<%= task.interactionHistory.length !== 1 ? 's' : '' %>)</small>
                    </h5>
                </div>
                <div class="card-body">
                    <% task.interactionHistory.forEach((interaction, index) => { %>
                        <div class="interaction-item <% if (index > 0) { %>border-top pt-3<% } %> <% if (index < task.interactionHistory.length - 1) { %>mb-3<% } %>">
                            <!-- Question -->
                            <div class="mb-2">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-robot me-2 mt-1 text-primary" style="font-size: 1.1rem;"></i>
                                    <div class="flex-grow-1">
                                        <strong class="text-primary">AI Question:</strong>
                                        <div class="bg-light p-2 rounded mt-1">
                                            <%= interaction.question %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Answer -->
                            <div class="mb-2">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-person-fill me-2 mt-1 text-success" style="font-size: 1.1rem;"></i>
                                    <div class="flex-grow-1">
                                        <strong class="text-success">Your Answer:</strong>
                                        <div class="bg-success bg-opacity-10 border border-success border-opacity-25 p-2 rounded mt-1">
                                            <%= interaction.answer %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Timestamps and Duration -->
                            <% 
                                const questionDate = new Date(interaction.questionTimestamp || interaction.timestamp); // Fallback for old data
                                const answerDate = new Date(interaction.answerTimestamp || interaction.timestamp); // Fallback for old data
                                const durationSeconds = interaction.answerTimestamp ? (answerDate.getTime() - questionDate.getTime()) / 1000 : null;
                                const formattedDuration = durationSeconds ? helpers.formatDuration(durationSeconds) : 'N/A';
                            %>
                            <div class="text-muted small d-flex justify-content-between">
                                <span>
                                    <i class="bi bi-box-arrow-in-right me-1" title="Question Time"></i>
                                    Asked: <%= questionDate.toLocaleString() %>
                                    <i class="bi bi-box-arrow-in-left me-1 ms-3" title="Answer Time"></i>
                                    Answered: <%= answerDate.toLocaleString() %>
                                </span>
                                <strong title="Response Time">
                                    <i class="bi bi-hourglass-split me-1"></i>
                                    <%= formattedDuration %>
                                </strong>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
<% } %>

<!-- Current Pending Question -->
<% if (task.phase === 'waiting_for_input' && task.pendingQuestion) { %>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-question-circle-fill me-2"></i>
                        AI is currently waiting for your input
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-start mb-3" role="alert">
                        <i class="bi bi-robot me-2 mt-1" style="font-size: 1.25rem;"></i>
                        <div>
                            <strong class="d-block mb-1">QUESTION:</strong>
                            <p class="mb-0"><%= task.pendingQuestion.question %></p>
                        </div>
                    </div>
                    <div class="text-muted small mb-3">
                        <i class="bi bi-clock me-1"></i>
                        Asked at: <%= new Date(task.pendingQuestion.timestamp).toLocaleString() %>
                    </div>
                    <div class="mt-3">
                        <form id="answer-form" data-task-id="<%= task.taskId %>">
                            <div class="mb-2">
                                <label for="human-answer" class="form-label"><strong>Your Answer:</strong></label>
                                <textarea class="form-control" id="human-answer" name="answer" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send me-1"></i> Submit Answer and Resume
                            </button>
                            <div id="form-status" class="mt-2"></div>
                        </form>
                        
                        <div class="alert alert-info d-flex align-items-center mt-3" role="alert">
                            <i class="bi bi-terminal me-2"></i>
                            <div>
                                <strong>Alternative:</strong> You can also answer via your command-line interface.
                            </div>
                        </div>
                    </div>

                    <script>
                        document.getElementById('answer-form').addEventListener('submit', async (e) => {
                            e.preventDefault();
                            const form = e.target;
                            const taskId = form.dataset.taskId;
                            const answer = form.elements.answer.value;
                            const statusDiv = document.getElementById('form-status');
                            const submitButton = form.querySelector('button[type="submit"]');

                            submitButton.disabled = true;
                            statusDiv.innerHTML = '<span class="text-info"><i class="bi bi-hourglass-split me-1"></i>Submitting...</span>';

                            try {
                                const response = await fetch(`/task/${taskId}/respond`, {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({ answer })
                                });

                                if (response.ok) {
                                    form.elements.answer.disabled = true;
                                    statusDiv.innerHTML = '<span class="text-success"><i class="bi bi-check-circle me-1"></i>Answer submitted successfully. Task is resuming in the CLI.</span>';
                                } else {
                                    const result = await response.json();
                                    statusDiv.innerHTML = `<span class="text-danger"><i class="bi bi-exclamation-triangle me-1"></i>Error: ${result.error}</span>`;
                                    submitButton.disabled = false;
                                }
                            } catch (error) {
                                statusDiv.innerHTML = `<span class="text-danger"><i class="bi bi-exclamation-triangle me-1"></i>Network error: ${error.message}</span>`;
                                submitButton.disabled = false;
                            }
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
<% } %>

<%- include('partials/_log-viewer') %>

<%- include('partials/_token-usage', { tokenUsage: task.tokenUsage, helpers: helpers }) %>

<!-- Raw Task Data (Debug) -->
<% if (process.env.NODE_ENV === 'development' || true) { %>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-code me-2"></i>
                        Debug Information
                        <small class="text-muted ms-2">(Raw Task State)</small>
                    </h5>
                </div>
                <div class="card-body">
                    <details>
                        <summary class="btn btn-outline-secondary btn-sm">View Raw JSON Data</summary>
                        <pre class="mt-3 bg-light p-3 border rounded"><code><%= JSON.stringify(task, null, 2) %></code></pre>
                    </details>
                </div>
            </div>
        </div>
    </div>
<% } %>

<%- include('partials/footer', { page: 'task-detail' }) %>