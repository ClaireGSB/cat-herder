<%- include('partials/header', { title: task.taskId }) %>

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/" class="text-decoration-none">
                <i class="bi bi-house-fill"></i>
                Dashboard
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <%= task.taskId %>
        </li>
    </ol>
</nav>

<!-- Task Overview Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-transparent">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h4 mb-0">
                        <i class="bi bi-gear-fill me-2 text-primary"></i>
                        <%= task.taskId %>
                    </h1>
                    <span class="badge status-<%= task.phase %> fs-6 task-status">
                        <% if (task.phase === 'running') { %>
                            <i class="bi bi-arrow-repeat spinner-border spinner-border-sm me-1" role="status"></i>
                        <% } else if (task.phase === 'done') { %>
                            <i class="bi bi-check-circle-fill me-1"></i>
                        <% } else if (task.phase === 'failed') { %>
                            <i class="bi bi-exclamation-triangle-fill me-1"></i>
                        <% } else if (task.phase === 'paused') { %>
                            <i class="bi bi-pause-circle-fill me-1"></i>
                        <% } %>
                        <%= task.phase %>
                    </span>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <h6 class="text-muted mb-1">Pipeline</h6>
                        <span class="badge bg-secondary">
                            <%= task.pipeline || 'default' %>
                        </span>
                    </div>
                    <% if (task.branch) { %>
                        <div class="col-md-3">
                            <h6 class="text-muted mb-1">Git Branch</h6>
                            <div>
                                <i class="bi bi-git me-1"></i>
                                <code><%= task.branch %></code>
                            </div>
                        </div>
                    <% } %>
                    <div class="col-md-3">
                        <h6 class="text-muted mb-1">Duration</h6>
                        <span class="task-duration">
                            <% if (task.stats?.totalDuration) { %>
                                <%= task.stats.totalDuration.toFixed(2) %>s
                            <% } else { %>
                                N/A
                            <% } %>
                        </span>
                        <% if (task.stats?.totalPauseTime && task.stats.totalPauseTime > 0) { %>
                            <br>
                            <small class="text-warning">
                                <i class="bi bi-pause-fill"></i>
                                <%= task.stats.totalPauseTime.toFixed(2) %>s paused
                            </small>
                        <% } %>
                    </div>
                    <div class="col-md-3">
                        <h6 class="text-muted mb-1">Last Updated</h6>
                        <% if (task.lastUpdate) { %>
                            <%= new Date(task.lastUpdate).toLocaleString() %>
                        <% } else { %>
                            <span class="text-muted">Unknown</span>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Pipeline Steps -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-transparent">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ol me-2"></i>
                    Pipeline Steps
                </h5>
            </div>
            <div class="card-body">
                <% if (task.steps && task.steps.length > 0) { %>
                    <% task.steps.forEach((step, index) => { %>
                        <div class="pipeline-step <%= step.status %> p-3" data-step="<%= step.name %>">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">
                                        <span class="badge bg-light text-dark me-2"><%= index + 1 %></span>
                                        <%= step.name %>
                                        
                                        <% if (step.status === 'completed') { %>
                                            <i class="bi bi-check-circle-fill text-success ms-2"></i>
                                        <% } else if (step.status === 'running') { %>
                                            <i class="bi bi-arrow-repeat text-primary ms-2 spinner-border spinner-border-sm" role="status"></i>
                                        <% } else if (step.status === 'failed') { %>
                                            <i class="bi bi-x-circle-fill text-danger ms-2"></i>
                                        <% } else { %>
                                            <i class="bi bi-circle text-muted ms-2"></i>
                                        <% } %>
                                    </h6>
                                    
                                    <% if (step.duration) { %>
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>
                                            <%= step.duration.toFixed(2) %>s
                                        </small>
                                    <% } %>
                                </div>
                                
                                <div class="btn-group btn-group-sm ms-3" role="group">
                                    <% if (task.logs && task.logs[step.name]) { %>
                                        <% if (task.logs[step.name].log) { %>
                                            <button type="button" class="btn btn-outline-primary" 
                                                    onclick="loadLog('<%= task.taskId %>', '<%= task.logs[step.name].log %>', 'log-content')"
                                                    title="View Main Log">
                                                <i class="bi bi-file-text"></i>
                                                Main Log
                                            </button>
                                        <% } %>
                                        <% if (task.logs[step.name].reasoning) { %>
                                            <button type="button" class="btn btn-outline-secondary" 
                                                    onclick="loadLog('<%= task.taskId %>', '<%= task.logs[step.name].reasoning %>', 'log-content')"
                                                    title="View Reasoning Log">
                                                <i class="bi bi-lightbulb"></i>
                                                Reasoning
                                            </button>
                                        <% } %>
                                        <% if (task.logs[step.name].raw) { %>
                                            <button type="button" class="btn btn-outline-info" 
                                                    onclick="loadLog('<%= task.taskId %>', '<%= task.logs[step.name].raw %>', 'log-content')"
                                                    title="View Raw JSON Log">
                                                <i class="bi bi-code-square"></i>
                                                Raw
                                            </button>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-list-ol display-4 mb-3"></i>
                        <p>No pipeline steps information available.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Log Viewer -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-terminal me-2"></i>
                    Log Viewer
                </h5>
                <div id="loading-spinner" class="loading-spinner">
                    <div class="spinner-border spinner-border-sm text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="log-viewer" id="log-content">
                    <div class="text-muted p-4 text-center">
                        <i class="bi bi-file-text display-4 mb-3"></i>
                        <p>Select a step log above to view its content here.</p>
                        <small>Logs will be loaded asynchronously for better performance.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Token Usage & Stats -->
<% if (task.tokenUsage && Object.keys(task.tokenUsage).length > 0) { %>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Token Usage & Cost Analysis
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <% Object.entries(task.tokenUsage).forEach(([model, usage]) => { %>
                            <div class="col-lg-6 mb-3">
                                <div class="task-stats">
                                    <h6 class="mb-3">
                                        <i class="bi bi-cpu me-1"></i>
                                        <%= model %>
                                    </h6>
                                    
                                    <div class="row text-center">
                                        <div class="col-6">
                                            <div class="border-end pe-3">
                                                <h4 class="text-primary mb-1">
                                                    <%= usage.inputTokens?.toLocaleString() || '0' %>
                                                </h4>
                                                <small class="text-muted">Input Tokens</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="ps-3">
                                                <h4 class="text-success mb-1">
                                                    <%= usage.outputTokens?.toLocaleString() || '0' %>
                                                </h4>
                                                <small class="text-muted">Output Tokens</small>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <% if (usage.cacheCreationInputTokens || usage.cacheReadInputTokens) { %>
                                        <hr class="my-3">
                                        <div class="row text-center small">
                                            <div class="col-6">
                                                <div class="border-end pe-3">
                                                    <strong class="text-info">
                                                        <%= usage.cacheCreationInputTokens?.toLocaleString() || '0' %>
                                                    </strong>
                                                    <br>
                                                    <small class="text-muted">Cache Created</small>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="ps-3">
                                                    <strong class="text-warning">
                                                        <%= usage.cacheReadInputTokens?.toLocaleString() || '0' %>
                                                    </strong>
                                                    <br>
                                                    <small class="text-muted">Cache Read</small>
                                                </div>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %>

<!-- Raw Task Data (Debug) -->
<% if (process.env.NODE_ENV === 'development' || true) { %>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-code me-2"></i>
                        Debug Information
                        <small class="text-muted ms-2">(Raw Task State)</small>
                    </h5>
                </div>
                <div class="card-body">
                    <details>
                        <summary class="btn btn-outline-secondary btn-sm">View Raw JSON Data</summary>
                        <pre class="mt-3 bg-light p-3 border rounded"><code><%= JSON.stringify(task, null, 2) %></code></pre>
                    </details>
                </div>
            </div>
        </div>
    </div>
<% } %>

<%- include('partials/footer') %>