<%- include('partials/header', { title: sequence.sequenceId, page: 'sequence-detail' }) %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-collection me-2 text-primary"></i>
            <%= sequence.sequenceId %>
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/history" class="text-decoration-none">
                        <i class="bi bi-clock-history"></i>
                        Run History
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"><%= sequence.sequenceId %></li>
            </ol>
        </nav>
    </div>
    <div class="d-flex align-items-center gap-3">
        <span class="badge status-<%= sequence.phase %> fs-6 sequence-status">
            <% if (sequence.phase === 'running') { %>
                <i class="bi bi-arrow-repeat spinner-border spinner-border-sm me-1" role="status"></i>
            <% } else if (sequence.phase === 'done') { %>
                <i class="bi bi-check-circle-fill me-1"></i>
            <% } else if (sequence.phase === 'failed') { %>
                <i class="bi bi-exclamation-triangle-fill me-1"></i>
            <% } else if (sequence.phase === 'paused') { %>
                <i class="bi bi-pause-circle-fill me-1"></i>
            <% } %>
            <%= sequence.phase %>
        </span>
    </div>
</div>

<!-- Sequence Info Card -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-transparent">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Sequence Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="task-stats">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Folder Path</span>
                                <strong>
                                    <% if (sequence.folderPath) { %>
                                        <i class="bi bi-folder me-1"></i><%= sequence.folderPath %>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </strong>
                            </div>
                            <% if (sequence.branch) { %>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">Git Branch</span>
                                    <strong><i class="bi bi-git me-1"></i><%= sequence.branch %></strong>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="task-stats h-100">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Total Duration</span>
                                <strong class="sequence-duration">
                                    <%= helpers.formatDuration(sequence.stats?.totalDuration) %>
                                </strong>
                            </div>
                            <% if (sequence.stats?.totalPauseTime && sequence.stats.totalPauseTime > 0) { %>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">Pause Time</span>
                                    <strong class="text-warning">
                                        <i class="bi bi-pause-fill me-1"></i>
                                        <%= helpers.formatDuration(sequence.stats.totalPauseTime) %>
                                    </strong>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="task-stats">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Total Tasks</span>
                                <strong><%= sequence.tasks.length %></strong>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Completed</span>
                                <strong class="text-success">
                                    <%= sequence.tasks.filter(t => t.status === 'done').length %>
                                </strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="task-stats h-100">
                            <h6 class="mb-3 text-muted">
                                <i class="bi bi-graph-up me-1"></i>
                                Total Token Usage
                            </h6>
                            <% if (sequence.stats?.totalTokenUsage && Object.keys(sequence.stats.totalTokenUsage).length > 0) { %>
                                <% Object.entries(sequence.stats.totalTokenUsage).forEach(([model, usage]) => { %>
                                    <div class="mb-2 p-2 border rounded bg-light">
                                        <small class="fw-bold d-block mb-1"><%= helpers.formatModelName(model) %></small>
                                        <div class="token-usage small">
                                            <span class="badge bg-primary">Input: <%= (usage.inputTokens || 0).toLocaleString() %></span>
                                            <span class="badge bg-success">Output: <%= (usage.outputTokens || 0).toLocaleString() %></span>
                                            <span class="badge bg-info">Cache Write: <%= (usage.cacheCreationInputTokens || 0).toLocaleString() %></span>
                                            <span class="badge bg-warning text-dark">Cache Read: <%= (usage.cacheReadInputTokens || 0).toLocaleString() %></span>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="text-muted">N/A</div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tasks List -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-transparent">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-task me-2"></i>
                    Tasks in Sequence
                </h5>
            </div>
            <div class="card-body">
                <% if (sequence.tasks && sequence.tasks.length > 0) { %>
                    <% sequence.tasks.forEach((task, index) => { %>
                        <div class="pipeline-step <% if (task.status === 'done') { %>completed<% } else if (task.status === 'running') { %>running<% } else if (task.status === 'failed') { %>failed<% } %> mb-3" data-task-id="<%= task.taskId %>">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">
                                            <span class="badge bg-light text-dark me-2"><%= index + 1 %></span>
                                            <%= task.filename || 'Unknown File' %>
                                            
                                            <!-- Status badge -->
                                            <span class="badge status-<%= task.status %> ms-2 task-status-badge">
                                                <% if (task.status === 'running') { %>
                                                    <i class="bi bi-arrow-repeat spinner-border spinner-border-sm me-1" role="status"></i>
                                                <% } else if (task.status === 'done') { %>
                                                    <i class="bi bi-check-circle-fill me-1"></i>
                                                <% } else if (task.status === 'failed') { %>
                                                    <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                                <% } else { %>
                                                    <i class="bi bi-clock me-1"></i>
                                                <% } %>
                                                <%= task.status %>
                                            </span>
                                            
                                            <!-- Live activity link for running tasks -->
                                            <% if (task.status === 'running') { %>
                                                <a href="/live" class="ms-2 badge bg-danger text-decoration-none" title="View Live Activity">
                                                    <i class="bi bi-broadcast me-1"></i>LIVE
                                                </a>
                                            <% } %>
                                        </h6>
                                        
                                        <div class="small text-muted mb-2">
                                            <strong>Task ID:</strong> <%= task.taskId %>
                                        </div>
                                        
                                        <% if (task.lastUpdate) { %>
                                            <div class="small text-muted">
                                                <strong>Last Update:</strong> <%= new Date(task.lastUpdate).toLocaleString() %>
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <div class="ms-3">
                                        <% if (task.taskId) { %>
                                            <a href="/task/<%= task.taskId %>" class="btn btn-sm btn-outline-primary" title="View Task Details">
                                                <i class="bi bi-eye me-1"></i>
                                                Details
                                            </a>
                                        <% } else { %>
                                            <button class="btn btn-sm btn-outline-secondary" disabled title="Task not yet started">
                                                <i class="bi bi-eye me-1"></i>
                                                Details
                                            </button>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="bi bi-inbox display-6 text-muted mb-3"></i>
                        <h5 class="text-muted mb-2">No Tasks Found</h5>
                        <p class="text-muted">
                            This sequence doesn't contain any task files, or the task folder could not be read.
                        </p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer', { page: 'sequence-detail' }) %>