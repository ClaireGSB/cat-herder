<%- include('partials/header', { title: 'Sequences Dashboard' }) %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 mb-0">
        <i class="bi bi-collection me-2 text-primary"></i>
        Sequences Dashboard
    </h1>
    <div class="d-flex align-items-center text-muted">
        <i class="bi bi-arrow-clockwise me-1"></i>
        <small>Auto-refreshes in real-time</small>
    </div>
</div>

<% if (sequences && sequences.length > 0) { %>
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card border-0 bg-success bg-opacity-10">
                <div class="card-body text-center">
                    <h3 class="text-success mb-1"><%= sequences.filter(s => s.phase === 'done').length %></h3>
                    <small class="text-muted">Completed</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 bg-primary bg-opacity-10">
                <div class="card-body text-center">
                    <h3 class="text-primary mb-1"><%= sequences.filter(s => s.phase === 'running').length %></h3>
                    <small class="text-muted">Running</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 bg-danger bg-opacity-10">
                <div class="card-body text-center">
                    <h3 class="text-danger mb-1"><%= sequences.filter(s => s.phase === 'failed').length %></h3>
                    <small class="text-muted">Failed</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 bg-secondary bg-opacity-10">
                <div class="card-body text-center">
                    <h3 class="text-secondary mb-1"><%= sequences.filter(s => ['pending', 'paused'].includes(s.phase)).length %></h3>
                    <small class="text-muted">Pending/Paused</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-transparent">
            <h5 class="card-title mb-0">
                <i class="bi bi-layers me-2"></i>
                Recent Sequences
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Sequence ID</th>
                            <th>Status</th>
                            <th>Folder Path</th>
                            <th>Duration</th>
                            <th>Token Usage</th>
                            <th>Last Update</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sequences.forEach(sequence => { %>
                            <tr data-sequence-id="<%= sequence.sequenceId %>">
                                <td>
                                    <a href="/sequence/<%= sequence.sequenceId %>" class="text-decoration-none">
                                        <strong><%= sequence.sequenceId %></strong>
                                    </a>
                                    <% if (sequence.branch) { %>
                                        <br>
                                        <small class="text-muted">
                                            <i class="bi bi-git"></i>
                                            <%= sequence.branch %>
                                        </small>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge status-<%= sequence.phase %> status-badge">
                                        <% if (sequence.phase === 'running') { %>
                                            <i class="bi bi-arrow-repeat spinner-border spinner-border-sm me-1" role="status"></i>
                                        <% } else if (sequence.phase === 'done') { %>
                                            <i class="bi bi-check-circle-fill me-1"></i>
                                        <% } else if (sequence.phase === 'failed') { %>
                                            <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                        <% } else if (sequence.phase === 'paused') { %>
                                            <i class="bi bi-pause-circle-fill me-1"></i>
                                        <% } %>
                                        <%= sequence.phase %>
                                    </span>
                                </td>
                                <td>
                                    <% if (sequence.folderPath) { %>
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-folder me-1"></i>
                                            <%= sequence.folderPath %>
                                        </span>
                                    <% } else { %>
                                        <span class="text-muted">N/A</span>
                                    <% } %>
                                </td>
                                <td class="duration-cell">
                                    <% if (sequence.stats?.totalDuration) { %>
                                        <%= sequence.stats.totalDuration.toFixed(2) %>s
                                    <% } else { %>
                                        <span class="text-muted">N/A</span>
                                    <% } %>
                                    
                                    <% if (sequence.stats?.totalPauseTime && sequence.stats.totalPauseTime > 0) { %>
                                        <br>
                                        <small class="text-warning">
                                            <i class="bi bi-pause-fill"></i>
                                            <%= sequence.stats.totalPauseTime.toFixed(2) %>s paused
                                        </small>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (sequence.stats?.totalTokenUsage && Object.keys(sequence.stats.totalTokenUsage).length > 0) { %>
                                        <% Object.entries(sequence.stats.totalTokenUsage).forEach(([model, usage]) => { %>
                                            <div class="token-usage">
                                                <small class="text-muted d-block"><%= model.split('-').pop() %></small>
                                                <% if (usage.inputTokens) { %>
                                                    <span class="badge bg-info">In: <%= usage.inputTokens.toLocaleString() %></span>
                                                <% } %>
                                                <% if (usage.outputTokens) { %>
                                                    <span class="badge bg-success">Out: <%= usage.outputTokens.toLocaleString() %></span>
                                                <% } %>
                                            </div>
                                        <% }); %>
                                    <% } else { %>
                                        <span class="text-muted">N/A</span>
                                    <% } %>
                                </td>
                                <td class="update-cell">
                                    <% if (sequence.lastUpdate) { %>
                                        <%= new Date(sequence.lastUpdate).toLocaleString() %>
                                    <% } else { %>
                                        <span class="text-muted">Unknown</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/sequence/<%= sequence.sequenceId %>" class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <% if (sequence.phase === 'failed') { %>
                                            <button type="button" class="btn btn-outline-secondary" title="Retry" disabled>
                                                <i class="bi bi-arrow-clockwise"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <% if (sequences.length > 10) { %>
        <div class="text-center mt-3">
            <small class="text-muted">
                Showing recent sequences. Use filters or search for specific sequences.
            </small>
        </div>
    <% } %>

<% } else { %>
    <div class="empty-state">
        <div class="text-center">
            <i class="bi bi-layers display-1 text-muted mb-3"></i>
            <h3 class="text-muted mb-3">No Sequences Found</h3>
            <p class="text-muted mb-4">
                No task sequences have been run yet. Start by running a sequence with:<br>
                <code>claude-project run-sequence your-feature-folder</code>
            </p>
            <div class="d-flex justify-content-center gap-3">
                <a href="/" class="btn btn-outline-primary" onclick="window.location.reload()">
                    <i class="bi bi-arrow-clockwise me-1"></i>
                    Refresh
                </a>
            </div>
        </div>
    </div>
<% } %>

<%- include('partials/footer') %>