  "scripts": {
    "build": "rm -rf dist && npm run build:frontend && tsc -p tsconfig.json && cp -r src/backend/dot-claude dist/ && cp -r src/backend/tasks dist/ && cp -r src/backend/templates dist/ && cp -r src/frontend/dist dist/frontend && chmod +x dist/index.js",
    "build:frontend": "cd src/frontend && npm run build",
    "dev": "tsx src/backend/index.ts",
    "dev:frontend": "cd src/frontend && npm run dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "typecheck:frontend": "cd src/frontend && vue-tsc -b --noEmit"
  }
